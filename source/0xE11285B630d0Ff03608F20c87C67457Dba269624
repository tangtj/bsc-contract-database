        address to,
        uint256 deadline
    ) external returns (uint256 amountETH);

    function removeLiquidityETHWithPermitSupportingFeeOnTransferTokens(
        address token,
        uint256 liquidity,
        uint256 amountTokenMin,
        uint256 amountETHMin,
        address to,
        uint256 deadline,
        bool approveMax,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external returns (uint256 amountETH);

    function swapExactTokensForTokensSupportingFeeOnTransferTokens(
        uint256 amountIn,
        uint256 amountOutMin,
        address[] calldata path,
        address to,
        uint256 deadline
    ) external;

    function swapExactETHForTokensSupportingFeeOnTransferTokens(
        uint256 amountOutMin,
        address[] calldata path,
        address to,
        uint256 deadline
    ) external payable;

    function swapExactTokensForETHSupportingFeeOnTransferTokens(
        uint256 amountIn,
        uint256 amountOutMin,
        address[] calldata path,
        address to,
        uint256 deadline
    ) external;
}


// Root file: contracts/libs/Repair.sol

pragma solidity ^0.8.4;

// import "@openzeppelin/contracts/access/Ownable.sol";
// import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
// import "contracts/launchpad/interfaces/IPoolManager.sol";
// import "contracts/libs/IWETH.sol";
// import "contracts/interfaces/IUniswapV2Factory.sol";
// import "contracts/interfaces/IUniswapV2Pair.sol";
// import "contracts/interfaces/IUniswapV2Router02.sol";

interface IPresale {
    function router() external view returns (address);
}

contract Repair is Ownable {
    IPoolManager public poolManager;
    IWETH public weth;
    uint256 public fixedAmount;

    constructor(address _poolManager, address _weth, uint256 _fixedAmount) {
        poolManager = IPoolManager(_poolManager);
        weth = IWETH(_weth);
        fixedAmount = _fixedAmount;
    }

    receive() external payable {}

    function fixPair(address token) external {
        address pool = poolManager.poolForToken(token);
        require(pool != address(0), "Invalid pool");
        address router = IPresale(pool).router();
        address factory = IUniswapV2Router02(router).factory();
        address pair = IUniswapV2Factory(factory).getPair(token, address(weth));
        require(pair != address(0), "Invalid pair");
        (uint256 reserve0, uint256 reserve1, ) = IUniswapV2Pair(pair)
            .getReserves();
        uint256 reserveToken;
        uint256 reserveEther;
        (reserveToken, reserveEther) = token < address(weth)
            ? (reserve0, reserve1)
            : (reserve1, reserve0);
        require(
            reserveToken == 0 && reserveEther > 0 && reserveEther < fixedAmount,
            "Invalid reserves"
        );
        uint256 amountToSupply = fixedAmount - reserveEther;
        weth.deposit{value: amountToSupply}();
        IERC20(address(weth)).transfer(pair, amountToSupply);
        IUniswapV2Pair(pair).sync();

        // Revalidate final state
        (reserve0, reserve1, ) = IUniswapV2Pair(pair).getReserves();
        require(
            (reserve0 == fixedAmount && reserve1 == 0) ||
                (reserve0 == 0 && reserve1 == fixedAmount),
            "Invalid state"
        );
    }

    function withdraw() external onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }
}