  //Value of fee tax div 20 = 5%
  uint256 private _fee = 5; //5%
  uint256 private _tax = 100000000000000000; //0.1

  //id generated from the manufacture of the Rifa contract
  uint public raffleId = 0; 

  //total active raffles
