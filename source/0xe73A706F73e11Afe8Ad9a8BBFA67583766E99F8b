    /// @notice starts the raffle from the Manager contract
    /// @dev this method is performed by the Manager contract
    /// @param id_ raffle contract
    /// @param index_ raffle contract
    /// @param raffleName_ raffle title
    /// @param quant_ total numbers
    /// @param startTime_ date start
    /// @param finishTime_ date finish
    /// @param price_ price number
    /// @param token_ address token
    function init(
        uint id_, 
        uint index_,
        string memory raffleName_, 
        uint quant_, 
        uint startTime_, 
        uint finishTime_, 
        uint256 price_, 
        address token_,
        address owner_,
        string[] memory metadata_,
        uint softcap_) external onlyManager
    {
       
       require(state==0, "raffle created");
       require(token_ != address(0), "token address 0x000");   

       indexTokens[0] = true;
       raffleType = stringToUint(metadata_[3]);

       /// @dev fill in the parameters
       id = id_;
       index = index_;
       softcap = raffleType == 2 ? 0 : softcap_;
       raffleName = raffleName_;
       startTime = startTime_;
       finishTime = finishTime_; 
       token = token_;
       quant = quant_;
       price = price_;
       tokenSymbol = IERC20(token).symbol();
       state = 1;
       metadata = metadata_;
       owner = owner_;
       
       
