       emit EventRaffleAdd(
            raffleName,
            startTime, 
            finishTime, 
            token,
            quant,
            price, 
            tokenSymbol,
            id,
            owner,
            metadata,
            softcap);

        /**
        * @dev Emitted add raffle in manager
        */
        _manager.addEventLog("EventRaffleAdd");

    }
