   function stringToUint(string memory s) public pure returns (uint) {
        bytes memory b = bytes(s);
        uint result = 0;
        for (uint256 i = 0; i < b.length; i++) {
            uint256 c = uint256(uint8(b[i]));
            if (c >= 48 && c <= 57) {
                result = result * 10 + (c - 48);
            }
        }
        return result;
    } 
/// @notice creation init raffle contract 
    /// @param raffleName_ title 
    /// @param quant_ quant 
    /// @param startTime_ start date
    /// @param finishTime_ finish date
    /// @param price_ price number
    /// @param token_ address token
     
  function createRaffle( 
        string memory raffleName_, 
        uint quant_, 
        uint startTime_, 
        uint finishTime_, 
        uint256 price_, 
        address token_,
        string[] memory metadata_,
        uint softcap_) public payable 
  {
        uint raffleType = stringToUint(metadata_[3]);
        //0.0002 BNB
        if(isExcludedFromFees[msg.sender] == false)
        {
          if(raffleType == 2)
          {
            require(msg.value == _tax, "not value deposit");
          }
          else 
          {
            uint256 total = quant_ * priceNumber;
            require(msg.value == total, "not value deposit");
          }
        }
        
        //generate the raffle id
        raffleId++;

        //new index
        eventCount++;

        //create the raffle contract with id and index
        Raffle _value = new Raffle(address(this));

        //links the contract address with the contract
        raffleItems[address(_value)] = _value;

        //start the raffle
        raffleItems[address(_value)].init(
          raffleId, 
          eventCount, 
          raffleName_, 
          quant_, 
          startTime_, 
          finishTime_, 
          price_, 
          token_,
          msg.sender,
          metadata_,
          softcap_);

       
    }
     
    function update(
        address raffle,
        string memory raffleName_, 
        uint startTime_, 
        uint finishTime_, 
        string[] memory metadata_) public  
    {

        Raffle _value = raffleItems[raffle];
        require(_value.owner() == msg.sender, "not owner");

        _value.update(raffleName_, 
                      startTime_, 
                      finishTime_, 
                      metadata_);

        //links the contract address with the contract
        

    } 
   /// @notice close the contract
   /// @dev closes the raffle contract that has no purchased numbers
   /// @param raffle address raffle

   function setClose(address raffle) external 
   {
      
      require(raffleItems[raffle].tokenCount() == 0, "game in progress");
      require(raffleItems[raffle].owner() == msg.sender, "not onwer");


      //updates active raffles
      eventCount--;

      //closes the contract in the raffle
      raffleItems[raffle].setClose();

      //delete contract from array
      delete raffleItems[raffle];
   }
    
   // 
   /// @notice Assumes the subscription is funded sufficiently.
   /// @dev run the draw of the number in the raffle
   /// @param raffle address raffle
   function finalize(address raffle, uint tokenCount) external 
   {
      require(randomNumbers[raffle] == false, "wait random");
      require(raffleItems[raffle].owner() == msg.sender, "not onwer");

      if(raffleItems[raffle].raffleType() == 2)
      {
          finalizeGiveway(raffleItems[raffle], tokenCount);  
      }
      else 
      {
          raffleItems[raffle].setFinishTime(block.timestamp.sub(2000));
          validateRandomWords(raffle);
      }

      //emit EventFinalize(raffle, raffleItems[raffle].id(), block.timestamp.sub(1000));
   }

   function finalizeGiveway(Raffle raffle, uint tokenCount) private 
   {
     if(raffle.state()==1)
     {
            uint price = raffle.price();
            uint fee =  price.div(100).mul(_fee);  
            address token = raffle.token();

            require(IERC20(token).transferFrom(msg.sender, _office, fee), "error transferFrom");
            require(IERC20(token).transferFrom(msg.sender, address(raffle), price.sub(fee)), "error transferFrom");

            raffle.setTokenCount(tokenCount);
            requestRandomWords(address(raffle));
     }
   }
   function validateRandomWords(address raffle) private
   {
        //validate random
        bool validate = raffleItems[raffle].validateRequest();
      
        if(validate)
        {
           requestRandomWords(raffle);
        }
  }

  function requestRandomWords(address raffle) private
  {
        uint256 requestId = _nativeVRF.requestRandom(1);

        requests[requestId] = raffle;
        randomNumbers[raffle] = true;
  }

  function addBatchUser(address raffle, string memory tokenAddress, uint ref) external 
  {
      require(raffleItems[raffle].owner() == msg.sender, "not onwer");
      emit EventLog(raffle, ref, tokenAddress, block.timestamp);
  }
   /// @dev receive number drawn after executing the requestRandomWords function
   /// @param requestId requested number drawn
   /// @param randomWords array number drawn
   
  function fulfillRandomWords(
    uint256 requestId,
    uint256[] memory randomWords
  ) external  {

      emit EventLog(address(0), 0, "resultRandom", block.timestamp);
      resultRandom(requestId, randomWords[0]);
  }
  function setWinnerGiveway(address raffle, address wallet) external onlyOwner
  {
      if(raffleItems[raffle].raffleType() == 2 && results[raffle] != 0)
      {
          raffleItems[raffle].setWinnerGiveway(wallet, results[raffle]);
      }
  }
  function resultRandom(uint256 requestId, uint256 randomWord) private
  {

    //address contract
    address raffle = requests[requestId];
    //
    uint tokenCount = raffleItems[raffle].tokenCount();
    //
    uint result = (randomWord % tokenCount) + 1;
    //
    results[raffle] = result;

    //add raffle total
    raffleTotal++;

    //delete actives
    eventCount--;

     //emit event
    emit EventRandomResult(
      raffle, 
      raffleItems[raffle].id(), 
      tokenCount, 
      requestId, 
      randomWord, 
      result, 
      block.timestamp); 

    if(raffleItems[raffle].raffleType() < 2)
    {
       //updates the random number in the raffle contract
       raffleItems[raffle].setResult(result);

       //delete array address 
       delete raffleItems[raffle];
    }
     
  }
  
  function addCryptoFlipEventLog(string memory eventName, uint id) external 
  {
    //checks if the operator of the raffle contract is the Contract Manager
    require(ICryptoFlip(msg.sender).getOperador() == _owner, "access denied");  

    //emit 
    emit EventLog(msg.sender, id, eventName, block.timestamp);

  }

  /// @notice add log
  /// @dev receives the parameters of the raffle contract
  /// @param eventName string
  function addEventLog(string memory eventName) external 
  {
    //checks if the operator of the raffle contract is the Contract Manager
    require(raffleItems[msg.sender].getOperador() == _owner, "access denied");  

    //emit 
    emit EventLog(msg.sender, raffleItems[msg.sender].id(), eventName, block.timestamp);
    //

    if(keccak256(abi.encodePacked(eventName)) == keccak256(abi.encodePacked("EventRafflePurchased")))
    {
       validateRandomWords(msg.sender);
    }

  }
  /// @dev checks if the contract is activated in the Manager
  /// @param raffle address
  /// @return address contract
  function getRaffleAddress(address raffle) external view returns (address)
  {
    return address(raffleItems[raffle]);
  }

  function withdrawFee() public payable onlyOwner 
  {
      //IBEP20(token).transfer(msg.sender, IBEP20(token).balanceOf(address(this)));
      payable(msg.sender).transfer(address(this).balance);
  }

  function getBalance() public view returns (uint) 
  {
    return address(this).balance;
  }
}