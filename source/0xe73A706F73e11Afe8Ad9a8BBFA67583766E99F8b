    {
         if(tokenCount == 0)
         {
            closed = true;
            claimed = true; 
            closeRaffle();
         }
    }
    /// @notice purchased numbers
    /// @dev return purchased numbers
    /// @return array purchased numbers
    function getTokens() external view returns(uint256[] memory) 
    {
        uint256[] memory tokensId = new uint256[](tokenCount);
        for(uint256 i = 0; i < tokenCount; i++)
        {   
             Item storage item = items[i+1];
             tokensId[i] = item.itemId;
        }
        return tokensId;
    }
    /// @notice numbers purchased from wallet
    /// @param addr wallet address
    /// @return array numbers purchased
    function tokensOfOwner(address addr) external view returns(uint256[] memory) 
    {
        uint256 balance = balanceOf(addr);
        uint256[] memory tokensId = new uint256[](balance);
        for(uint256 i = 0; i < balance; i++)
        {
            uint _index = tokenOfOwnerByIndex(addr, i);
            Item storage item = items[_index];
            tokensId[i] = item.itemId;
        }
        return tokensId;
    }
   
    /// @notice mint nft
    /// @dev  mint NFTs with the numbers purchased from the raffle
    /// @param ids numbers purchased
    function mint(uint[] memory ids) external onlyOneBlock nonReentrant
    {
       
         
        /**
        * @dev check if it's closed
        */
        require(closed == false, "closed");
        /**
        * @dev checks if the date is greater than the end date
        */
        require(block.timestamp < finishTime, "closed");
        /**
        * @dev checks if the address is a contract
        */
        require(msg.sender.isContract() == false, "Not contract");
        /**
        * @dev checks state
        */
        require(state == 1, "not opened");

        /**
        * @dev checks max 5 ids
        */
        require(ids.length < 6, "5 max numbers");

        uint i = 0;
        uint j = 0;

        uint[] memory numbers = new uint[](ids.length);
  
        while (i < ids.length) 
        { 
            uint itemId = ids[i];
            require(itemId <= quant, "id greater than quantity");

            if(indexTokens[itemId]==false)
            {
                numbers[j] = itemId;
                indexTokens[itemId] = true;
                tokenCount++;
               
                j++;
                _mint(itemId);
            }
            i++;
         
        }        
        /**
        * @dev Emitted when `wallet, date, tokensId, tokenCount, balance
        */
        emit EventRafflePurchased(
            msg.sender,
            block.timestamp,
            numbers,
            tokenCount,
            getBalance());
        
        /**
        * @dev Emitted when `purchased Manager
        */
        _manager.addEventLog("EventRafflePurchased");

        uint256 total = price.mul(j);
        tokenTransfer(total);
    }
    
    
    /// @dev tokenTransfer the value of the NFT of the numbers purchased in the contract
    /// @param total total number purchased * price
    function tokenTransfer(uint256 total) private
    {
       (address _office, uint _fee) = _manager.getOffice();
    
       uint fee =  total.div(100).mul(_fee);       /**
       * @dev transfers the fee amount to the office contract
       */
       require(IERC20(token).transferFrom(msg.sender, _office, fee), "error transferFrom");
       require(IERC20(token).transferFrom(msg.sender, address(this), total.sub(fee)), "error transferFrom");
      
    }
    /// @notice mint the nft of the purchased number
    /// @param itemId purchased number
 
    
    function _mint(uint itemId) private
    {
        items[tokenCount] = Item(itemId, block.timestamp, payable(msg.sender));
        _safeMint(msg.sender, tokenCount);
    }
}

