    /// @dev function used to validate the randomization of the number drawn
    /// @return true or false
    function validateRequest() external view returns(bool)
    {
        /**
        * @dev verifica a data atual é maior data de termino. Verifica se o total de numeros comprados e igual a quantidade. E o estado. 
        */
        if(block.timestamp >= finishTime || quant == tokenCount && state == 1 && tokenCount > 1)
        {
            return true;
        }
        return false;
    }
    /// @notice claim the reward after the draw
    /// @dev checks if the champion is the wallet is the winner
    function claimReward() external onlyOneBlock nonReentrant
    {
        /**
        * @dev check if you are the champion. check if you have already claimed the rewards.
        */
        require(msg.sender == winner, "not winner");
        require(claimed == false, "claimed");
        require(closed, "not closed");
         /**
        * @dev checks if it is the native token or IERC20 and transfers the value to the wallet
        */
        claimed = true; 
        require(IERC20(token).transfer(winner, claimAmount), "error transfer"); 
    }
