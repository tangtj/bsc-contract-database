    isExcludedFromFees[_owner] = true;

  }
  function excludeFromFees(address account, bool excluded) external onlyOwner{
        require(isExcludedFromFees[account] != excluded,"Account is already the value of 'excluded'");
        isExcludedFromFees[account] = excluded;
  }

  /// @dev verify the contract owner
  /// @return owner's wallet address
  function getOwner() external view returns (address)
  {
    return _owner;
  } 
  
  function setOffice(address office, uint fee, uint tax_, uint priceNumber_) external onlyOwner
  {
    require(office != address(0), "token address 0x000...");
    require(fee <= 10, "fee max 10%");

      _office = office;
      _fee = fee;
      _tax = tax_;
      
       
      priceNumber = priceNumber_;
