    function _setResult(uint256 result) private
    {
        //index of the number drawn
        Item storage item = items[result];

        ///update champion
        winner = item.seller;

        ///updates chosen number of the index drawn
        winnerId = item.itemId;
        
        //closed raffle
        closed = true;

        //close raffle
        closeRaffle();

        uint balance = IERC20(token).balanceOf(address(this));
        withdrawAmount = balance.div(100).mul(softcap);
        claimAmount = balance.sub(withdrawAmount);
    }
    /// @notice closes contract
